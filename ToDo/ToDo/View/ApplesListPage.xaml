<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDo.View.ApplesListPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView
                x:Name="appleList" 
                ItemsSource="{Binding Apples}"
                SelectedItem="{Binding SelectedApples}" 
                HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label 
                                        Text="{Binding Sort}" 
                                        FontSize="40"  
                                        TextColor="Black"/>
                                    <Label 
                                        Text="{Binding Color}"
                                        FontSize="20" 
                                        TextColor="Black"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Add Apple" Command="{Binding CreateAppleCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>